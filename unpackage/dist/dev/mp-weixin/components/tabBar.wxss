.clear {
  content: '';
  overflow: hidden;
  clear: both;
}
.float {
  float: left;
}
.tab-bar {
  position: relative;
}
.nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 216rpx;
  background-image: url("https://mang-gou.tos-cn-beijing.volces.com/release%2F%E8%81%94%E5%90%88%202%402x.png");
  background-size: 100%,196rpx;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 82rpx;
  border-radius: 50rpx 50rpx 0 0;
}
.nav .tab-bar-item image {
  width: 48rpx;
  height: 48rpx;
}
.nav .tab-bar-item:nth-child(1) {
  margin-right: 112rpx;
}
.nav .tab-bar-item:nth-child(2) {
  margin-right: 172rpx;
}
.nav .tab-bar-item:nth-child(3) {
  margin-right: 112rpx;
}
.nav .releaseIcon {
  position: absolute;
  top: -36rpx;
  left: 318rpx;
}
.nav .releaseIcon image {
  width: 116rpx;
  height: 116rpx;
}
.release:after {
  /* 这个伪类的作用就是一个圆弧的背景色 */
  width: 2548rpx;
  height: 2552rpx;
  position: absolute;
  left: -118%;
  /* 之所以left:20%,是因为width:140%，宝贝可以是是别的值，例如width:160%，那么left:30%才能水平居中，可以发现规律的 */
  top: 0;
  z-index: -1;
  /*层叠顺序，最底层显示*/
  content: '';
  border-radius: 50% 50% 0 0;
  /*分别对应 左上 右上 右下 左下*/
  background-color: #fff;
  /* 将这个伪类水平居中 */
}
.mask {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(51, 51, 51, 0.6);
}
.mask .release {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 650rpx;
}
.mask .release .top_btn {
  padding-top: 118rpx;
  padding-left: 148rpx;
}
.mask .release .top_btn .release_item {
  text-align: center;
}
.mask .release .top_btn .release_item image {
  width: 128rpx;
  height: 128rpx;
}
.mask .release .top_btn .release_item .text {
  font-family: PingFang HK-Regular, PingFang HK;
  font-size: 32rpx;
  color: #333;
}
.mask .release .top_btn .release_item .tips {
  font-family: PingFang HK-Regular, PingFang HK;
  font-size: 24rpx;
  color: #999999;
}
.mask .release .top_btn .release_item:nth-child(1) {
  padding-right: 192rpx;
}
.mask .release .close {
  margin-top: 116rpx;
  text-align: center;
}
.mask .release .close image {
  width: 62rpx;
  height: 62rpx;
}
.release_vanish {
  margin-bottom: -650rpx;
  transition: all 0.4s;
}
.mask_vanish {
  top: -100%;
  transition: all 0.4s;
}
.release_appear {
  margin-bottom: 0rpx;
  transition: all 0.4s;
}
.mask_appear {
  top: 0%;
  transition: all 0.4s;
}

