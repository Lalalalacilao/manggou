.mt-Personal-Details {
  width: 750rpx;
}
.mt-Personal-Details .mt-Personal-Details-head {
  background: linear-gradient(180deg, #d04949 0%, #F6F6F6 100%);
  width: 100%;
  margin: auto;
  height: 200rpx;
  font-size: 40rpx;
}
.mt-Personal-Details .mt-Personal-Details-head .mt-Personal-Details-head-del {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  top: 100rpx;
}
.mt-Personal-Details .mt-Personal-Details-head .mt-Personal-Details-head-del view {
  font-size: 40rpx;
  height: 50rpx;
  text-align: center;
}
.mt-Personal-Details .mt-Personal-Details-head .mt-Personal-Details-head-del image {
  width: 60rpx;
  height: 60rpx;
}
.mt-Personal-Details .mt-Personal-Details-body {
  width: 90%;
  margin: auto;
}
.mt-Personal-Details .mt-Personal-Details-body .mt-Personal-Details-body-title {
  color: #8a8a8a;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}
.mt-Personal-Details .mt-Personal-Details-body .mt-Personal-Details-body-img {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 38rpx;
  color: #515151;
}
.mt-Personal-Details .mt-Personal-Details-body .mt-Personal-Details-body-img image {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}
.mt-Personal-Details .mt-Personal-Details-body .mt-Personal-Details-body-img .mt-Personal-Details-body-img-txt {
  width: 200rpx;
}
.mt-Personal-Details .mt-Personal-Details-body .mt-Personal-Details-body-img view {
  width: 130rpx;
}
.mt-Personal-Details .save {
  background: #C94242;
  border: none;
  color: #ffffff;
  margin-top: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  width: 400rpx;
}

