.float_left {
  float: left;
}
.float_right {
  float: right;
}
.clear {
  clear: both;
  content: "";
  overflow: hidden;
}
.content {
  background-color: #F9F9F9;
}
.status_bar {
  width: 100%;
  height: 88rpx;
}
.top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}
.top .title {
  height: 88rpx;
  box-sizing: border-box;
  padding: 24rpx 0 20rpx 32rpx;
  font-size: 0;
}
.top .title .back image {
  width: 44rpx;
  height: 44rpx;
}
.top .title .title_text {
  font-family: PingFang SC-Heavy, PingFang SC;
  color: #333;
  font-weight: 800;
  font-size: 32rpx;
  margin-left: 234rpx;
}
.fill {
  height: 176rpx;
}
.from {
  display: block;
  padding: 32rpx;
}
.from .from_item {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 20rpx 0;
}
.from .from_item text {
  font-size: 32rpx;
  font-weight: 800;
  letter-spacing: 3rpx;
}
.from .from_item input {
  width: 520rpx;
  height: 50rpx;
}
.from .default {
  margin-top: 10rpx;
}
.from .default .text {
  font-size: 32rpx;
  font-weight: 800;
}
.from .default .switch {
  width: 76rpx;
  height: 40rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 4rpx;
}
.from .default .switch .view {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #FFFFFF;
}
.from .default .open_switch_bacc {
  background-color: #F2D86D !important;
  transition: all 0.4s !important;
}
.from .default .open_btn {
  -webkit-transform: translateX(36rpx) !important;
          transform: translateX(36rpx) !important;
  transition: all 0.4s !important;
}
.from .default .close_switch_bacc {
  background-color: #EAEAEA !important;
  transition: all 0.4s !important;
}
.from .default .close_btn {
  -webkit-transform: translateX(0rpx) !important;
          transform: translateX(0rpx) !important;
  transition: all 0.4s !important;
}
.from .from_item:nth-child(1) text {
  letter-spacing: 19rpx;
}
.btn {
  margin: 0 32rpx;
  margin-top: 40rpx;
  display: block;
  width: 686rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #F2D86D;
  background-color: #F2D86D;
  border-radius: 50rpx;
  font-size: 32rpx;
  color: #0D0D26;
  font-family: PingFang HK-Medium, PingFang HK;
  font-weight: 500;
  box-shadow: 0rpx 16rpx 55rpx -20rpx #f2d86d;
}

