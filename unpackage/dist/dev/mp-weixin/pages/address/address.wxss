.float_left {
  float: left;
}
.float_right {
  float: right;
}
.clear {
  clear: both;
  content: "";
  overflow: hidden;
}
.content {
  background-color: #F9F9F9;
}
.status_bar {
  width: 100%;
  height: 88rpx;
}
.fill {
  height: 176rpx;
}
.top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
}
.top .title {
  height: 88rpx;
  box-sizing: border-box;
  padding: 24rpx 0 20rpx 32rpx;
  font-size: 0;
}
.top .title .back image {
  width: 44rpx;
  height: 44rpx;
}
.top .title .title_text {
  font-family: PingFang SC-Heavy, PingFang SC;
  color: #333;
  font-weight: 800;
  font-size: 32rpx;
  margin-left: 234rpx;
}
.address {
  padding: 32rpx;
}
.address .address_item {
  background-color: #fff;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
  box-sizing: border-box;
  width: 686rpx;
}
.address .address_item .choose_btn {
  width: 80rpx;
}
.address .address_item .choose_btn .choose {
  width: 32rpx;
  height: 32rpx;
  box-sizing: border-box;
  border-radius: 50%;
  border: 2rpx solid #999999;
  margin: 0 auto;
  margin-top: 40rpx;
}
.address .address_item .choose_btn .chooseThis {
  background: url("https://mang-gou.tos-cn-beijing.volces.com/address%2F%E7%BB%84%E4%BB%B6%20171%20%E2%80%93%201%402x.png");
  background-size: 32rpx,32rpx;
  border: none;
}
.address .address_item .right {
  width: 606rpx;
  box-sizing: border-box;
  padding-right: 30rpx;
  font-size: 0;
}
.address .address_item .right .address_show {
  padding: 32rpx 0 38rpx 0;
  border-bottom: 2rpx solid #EFEFEF;
}
.address .address_item .right .address_show .address_top {
  font-family: PingFang SC-Bold, PingFang SC;
  margin-bottom: 4rpx;
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}
.address .address_item .right .address_show .address_top .name {
  margin-right: 40rpx;
}
.address .address_item .right .address_show .position {
  font-size: 26rpx;
  color: #999;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
}
.address .address_item .right .function {
  height: 94rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.address .address_item .right .function .defualt .text {
  font-family: PingFang SC-Regular, PingFang SC;
  font-size: 26rpx;
  color: #333333;
  margin-right: 22rpx;
}
.address .address_item .right .function .defualt .switch {
  width: 76rpx;
  height: 40rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 4rpx;
}
.address .address_item .right .function .defualt .switch .view {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #FFFFFF;
}
.address .address_item .right .function .fun_btn image {
  width: 32rpx;
  height: 32rpx;
}
.address .address_item .right .function .edit {
  margin-right: 48rpx;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 14rpx 32rpx 58rpx 14rpx;
}
.bottom view {
  width: 336rpx;
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;
  border-radius: 48rpx;
  color: #0D0D26;
  font-weight: bold;
  font-family: PingFang SC-Bold, PingFang SC;
}
.bottom .delete {
  border: 2rpx solid #E0E0E0;
}
.bottom .add {
  background-color: #F2D86D;
  box-shadow: 0rpx 16rpx 55rpx -20rpx #f2d86d;
}
.open_switch_bacc {
  background-color: #F2D86D !important;
  transition: all 0.4s !important;
}
.open_btn {
  -webkit-transform: translateX(36rpx) !important;
          transform: translateX(36rpx) !important;
  transition: all 0.4s !important;
}
.close_switch_bacc {
  background-color: #EAEAEA !important;
  transition: all 0.4s !important;
}
.close_btn {
  -webkit-transform: translateX(0rpx) !important;
          transform: translateX(0rpx) !important;
  transition: all 0.4s !important;
}

