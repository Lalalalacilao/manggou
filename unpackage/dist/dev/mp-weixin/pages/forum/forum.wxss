}
.side_release image {
  width: 60rpx;
  height: 60rpx;
}
.side_release view {
  text-align: center;
  font-family: PingFang HK-Regular, PingFang HK;
  font-size: 22rpx;
  color: #fff;
}
.delete {
  position: absolute;
  z-index: 99;
  top: 328rpx;
  right: 33rpx;
  height: 50rpx;
  width: 150rpx;
