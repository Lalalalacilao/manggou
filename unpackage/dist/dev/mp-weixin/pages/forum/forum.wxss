.float {
  float: left;
}
.clear {
  overflow: hidden;
  content: "";
  clear: left;
}
.fill {
  height: 176rpx;
}
.top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
  padding-left: 32rpx;
  background: linear-gradient(#F5DF9C, #F2D86D);
}
.top .status_bar {
  height: 88rpx;
}
.top .top_title {
  height: 88rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-bottom: 18rpx;
}
.top .top_title .title {
  font-size: 44rpx;
  color: #0D0D26;
  font-family: PingFang HK-Semibold, PingFang HK;
  font-weight: 600;
  margin-right: 24rpx;
}
.top .top_title .top_release {
  display: flex;
  justify-content: space-between;
  font-size: 0;
  box-sizing: border-box;
  width: 136rpx;
  height: 60rpx;
  background-color: #FFF3C1;
  border-radius: 30rpx 30rpx 30rpx 30rpx;
  border: 1rpx solid #fff;
  padding: 10rpx 20rpx;
}
.top .top_title .top_release image {
  width: 32rpx;
  height: 32rpx;
  margin-top: 4rpx;
  margin-bottom: 4rpx;
}
.top .top_title .top_release text {
  color: #785307;
  font-size: 28rpx;
  font-weight: 500rpx;
}
.show_list {
  background-color: #f9f9f9;
  height: 1252rpx;
}
.show_list .list_item {
  padding: 40rpx 30rpx 26rpx 32rpx;
  margin-bottom: 20rpx;
  font-family: PingFang HK-Regular, PingFang HK;
  background-color: #fff;
  font-size: 0;
  position: relative;
}
.show_list .list_item .info {
  margin-bottom: 30rpx;
}
.show_list .list_item .info image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.show_list .list_item .info .date_nick {
  margin-left: 20rpx;
}
.show_list .list_item .info .date_nick .nickname {
  font-size: 28rpx;
  color: #484848;
  font-weight: 500;
}
.show_list .list_item .info .date_nick .date {
  font-size: 26rpx;
  color: #BFBFBF;
}
.show_list .list_item .intr {
  margin-bottom: 20rpx;
  color: #333333;
  font-weight: 400;
  width: 656rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  clear: right;
  overflow: hidden;
  content: "";
}
.show_list .list_item .intr .partIntr {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}
.show_list .list_item .intr .partIntr::before {
  content: '';
  float: right;
  width: 1rpx;
  height: 150rpx;
}
.show_list .list_item .intr .showHideBtn {
  float: right;
  clear: both;
  font-family: PingFang SC-Medium, PingFang SC;
  height: 42rpx;
  margin-top: -35rpx;
  margin-right: 23rpx;
  color: #0D0D26;
  font-weight: bold;
  font-size: 30rpx;
  cursor: pointer;
}
.show_list .list_item .preview {
  margin-bottom: 32rpx;
  position: relative;
}
.show_list .list_item .preview image {
  width: 224rpx;
  height: 224rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}
.show_list .list_item .preview image:nth-child(1) {
  border-radius: 12rpx 0rpx 0rpx 0rpx;
}
.show_list .list_item .preview image:nth-child(2) {
  border-radius: 0rpx 0rpx 0rpx 0rpx;
}
.show_list .list_item .preview image:nth-child(3) {
  border-radius: 0rpx 12rpx 0rpx 0rpx;
  margin-right: 0;
}
.show_list .list_item .preview image:nth-child(4) {
  border-radius: 0rpx 0rpx 0rpx 12rpx;
}
.show_list .list_item .preview image:nth-child(5) {
  border-radius: 0rpx 0rpx 0rpx 0rpx;
}
.show_list .list_item .preview image:nth-child(6) {
  border-radius: 0rpx 0rpx 12rpx 0rpx;
  margin-right: 0;
}
.show_list .list_item .preview image:last-child {
  margin-right: 0;
}
.show_list .list_item .preview .moreImg {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 224rpx;
  height: 224rpx;
  border-radius: 0rpx 0rpx 12rpx 0rpx;
  background-color: rgba(51, 51, 51, 0.6);
  font-size: 56rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  line-height: 224rpx;
}
.show_list .list_item .buttom .past_time {
  color: #BFBFBF;
  font-size: 24rpx;
  margin-bottom: 26rpx;
}
.show_list .list_item .buttom .operate view {
  margin-right: 102rpx;
  display: flex;
  align-items: center;
}
.show_list .list_item .buttom .operate view image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}
.show_list .list_item .buttom .operate view .operate_num {
  font-size: 24rpx;
  color: #999999;
}
.show_list .list_item .buttom .operate .more {
  float: right;
  margin-right: 0;
  height: 44rpx;
  line-height: 44rpx;
  position: relative;
}
.show_list .list_item .buttom .operate .more image {
  width: 36rpx;
  height: 8rpx;
}
.side_release {
  position: fixed;
  right: 0rpx;
  top: 1224rpx;
  width: 144rpx;
  height: 112rpx;
  border-radius: 56rpx 0rpx 0rpx 56rpx;
  background-color: rgba(51, 51, 51, 0.6);
  box-sizing: border-box;
  padding: 10rpx 32rpx 6rpx 46rpx;
  font-size: 0;
