.content {
  background: linear-gradient(#F5DF9C 0%, #F2D86D 100%);
}
.top {
  padding: 0rpx 32rpx;
  padding-bottom: 38rpx;
}
.top .status_bar {
  width: 100%;
  height: 88rpx;
}
.top .title image {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 186rpx;
  height: 60rpx;
  margin-top: 8rpx;
}
.top .search {
  display: flex;
}
.top .search input {
  width: 622rpx;
  height: 40rpx;
  padding: 22rpx 32rpx;
  background-color: #F5F5F5;
  margin: 36rpx 0rpx;
  border-radius: 16rpx 0 0 16rpx;
}
.top .search .btn {
  border-radius: 0 16rpx 16rpx 0;
  margin-top: 35rpx;
  background-color: #F5F5F5;
  width: 93rpx;
  height: 86rpx;
  text-align: center;
  line-height: 100rpx;
}
.top .search .btn image {
  width: 28.59rpx;
  height: 29.76rpx;
}
.top .nav {
  content: "";
  clear: left;
  overflow: hidden;
}
.top .nav_item {
  float: left;
}
.top .nav_item .line {
  width: 100%;
  height: 3rpx;
  font-weight: bold;
  background-color: rgba(13, 13, 38, 0.6);
}
.top .nav_item .text {
  margin: 22rpx 115rpx 22rpx 115rpx;
  font-size: 28rpx;
  color: rgba(13, 13, 38, 0.6);
  font-family: PingFang SC-Regular, PingFang SC;
}
.top .active .text {
  margin-bottom: 20rpx;
  color: #0d0d26;
  font-weight: bold;
}
.top .active .line {
  height: 6rpx;
}
