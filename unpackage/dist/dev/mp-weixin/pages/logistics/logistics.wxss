.mg-logistics {
  background-color: #eff0f2;
}
.mg-line {
  padding: 20rpx;
}
.mg-logistics-box {
  padding-top: 200rpx;
}
.mg-logistics-box .mg-logistics-box-del {
  background-color: #fff;
  display: flex;
  justify-content: start;
  align-items: center;
  margin: 30rpx;
  border-radius: 20rpx;
}
.mg-logistics-box .mg-logistics-box-del .mg-box-image {
  padding: 25rpx 25rpx 25rpx 25rpx;
}
.mg-logistics-box .mg-logistics-box-del .mg-box-image image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
}
.mg-allOrder-top {
  width: 750rpx;
  position: fixed;
  background-color: white;
  z-index: 99;
}
.mg-allOrder-top .mg-top {
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 110rpx;
  padding-bottom: 35rpx;
}
.mg-allOrder-top .mg-top image {
  margin-left: 20rpx;
  width: 44rpx;
  height: 44rpx;
}
.mg-allOrder-top .mg-top view {
  font-size: 32rpx;
  font-family: PingFang HK-Semibold, PingFang HK;
  font-weight: 400;
  color: #333333;
  font-weight: 600;
}
.box2 {
  background: #fff;
  border-radius: 20rpx;
  margin: 30rpx;
}
.box2 .flow {
  position: relative;
  overflow: hidden;
  margin: 20rpx 30rpx;
}
.box2 .flow .line {
  height: 65%;
  width: 1px;
  background: #eff0f2;
  position: absolute;
  left: 9rpx;
  z-index: 0;
}
.box2 .flow .item {
  margin: 38rpx 0;
}
.box2 .flow .item .dot {
  width: 20rpx;
  height: 20rpx;
  background: #eff0f2;
  border-radius: 50%;
  position: relative;
  margin-right: 32rpx;
}
.box2 .flow .item .flex-grow-1 {
  padding-left: 40rpx;
}
.box2 .flow .item .flex-grow-1 .title {
  color: #a5a5a5;
}
.box2 .flow .item .flex-grow-1 .name {
  font-size: 0.75rem;
  margin-top: 5rpx;
  color: #707070;
}
.box2 .flow .item .flex-grow-1 .time {
  font-size: 0.75rem;
  margin-top: 5rpx;
  color: #707070;
}
.box2 .flow .item:nth-child(1) {
  color: #3493ff;
}
.box2 .flow .item:nth-child(1) .title {
  color: #3493ff;
}
.box2 .flow .item:nth-child(1) .name {
  color: #3493ff;
}
.box2 .flow .item:nth-child(1) .time {
  color: #3493ff;
}
.box2 .flow .item:nth-child(1) .dot {
  background: #3493ff;
}

