.float {
  float: left;
}
.clear {
  overflow: hidden;
  content: "";
  clear: left;
}
.top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding-left: 32rpx;
  background: linear-gradient(#F5DF9C, #F2D86D);
  font-family: PingFang HK-Semibold, PingFang HK;
  padding: 0rpx 32rpx 28rpx 32rpx;
}
.top .status_bar {
  height: 88rpx;
}
.top .top_title {
  font-size: 0;
  padding-top: 10rpx;
  padding-bottom: 13rpx;
  vertical-align: baseline;
}
.top .top_title .title {
  font-weight: 600;
  color: #0D0D26;
  font-size: 44rpx;
  margin-right: 12rpx;
}
.top .top_title .clear_mess {
  margin-top: 6rpx;
}
.top .top_title .clear_mess image {
  width: 48rpx;
  height: 48rpx;
}
.top .search {
  position: relative;
  padding-top: 13rpx;
}
.top .search .search_btn {
  position: absolute;
  left: 0;
  top: 13rpx;
  width: 92rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-radius: 16rpx;
  margin-bottom: 28rpx;
}
.top .search .search_btn image {
  width: 37.9rpx;
  height: 37.96rpx;
  margin: 0 auto;
  line-height: 80rpx;
}
.top .search input {
  box-sizing: border-box;
  width: 686rpx;
  height: 80rpx;
  padding: 20rpx 328rpx 20rpx 92rpx;
  background-color: #fff;
  color: #999999;
  font-size: 28rpx;
  font-family: PingFang HK-Regular, PingFang HK;
  font-weight: 400;
  border-radius: 16rpx;
}
.fill {
  height: 292rpx;
}
.message_list {
  padding: 10rpx 0rpx;
}
.message_list .message_item {
  display: flex;
  align-items: center;
  padding-top: 34rpx;
  padding-left: 32rpx;
  height: 184rpx;
  box-sizing: border-box;
}
.message_list .message_item .mess_left {
  position: relative;
  margin-right: 40rpx;
  margin-top: 2rpx;
  margin-bottom: 32rpx;
}
.message_list .message_item .mess_left image {
  width: 120rpx;
  height: 120rpx;
}
.message_list .message_item .mess_left .mess_tips {
  position: absolute;
  right: 2rpx;
  bottom: -2rpx;
  box-sizing: border-box;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(#FC6F90, #FC7D75);
  border: 2rpx solid #FFFFFF;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #fff;
}
.message_list .message_item .border_set {
  padding: 0rpx 32rpx 28rpx 0;
  border-bottom: 2rpx solid #EFEFEF;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.message_list .message_item .border_set .mess_middle {
  font-size: 0;
  font-family: PingFang HK-Semibold, PingFang HK;
  margin-right: 38rpx;
}
.message_list .message_item .border_set .mess_middle .nikename {
  font-size: 32rpx;
  color: #484848;
  font-weight: 600;
  margin-bottom: 8rpx;
}
.message_list .message_item .border_set .mess_middle .mess_pre {
  width: 364rpx;
  color: #999999;
  font-size: 26rpx;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.message_list .message_item .border_set .mess_middle .date {
  font-size: 20rpx;
  color: #999999;
}
.message_list .message_item .border_set .goods_pre image {
  border-radius: 16rpx;
  width: 124rpx;
  height: 124rpx;
}
.delete {
  transition: all 1s;
  width: 96rpx;
  height: 184rpx;
  text-align: center;
  line-height: 184rpx;
  background: linear-gradient(#FB4136, #FC6D5F);
  margin-top: -32rpx;
  margin-left: 8rpx;
}
.delete image {
  width: 32rpx;
  height: 32rpx;
}
.deleteBtn {
  transition: all 0.3s;
  margin-left: -96rpx;
}

