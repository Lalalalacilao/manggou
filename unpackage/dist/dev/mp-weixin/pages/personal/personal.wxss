  float: right;
}
.clear {
  overflow: hidden;
  content: "";
  clear: both;
}
.status_bar {
  height: 88rpx;
  margin-bottom: 104rpx;
}
.top {
  background-size: 750rpx,490rpx;
  height: 490rpx;
}
.top .personal_info {
  padding: 0 32rpx 72rpx 32rpx;
}
.top .personal_info .head {
  margin-right: 36rpx;
}
.top .personal_info .head image {
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
}
.top .personal_info .info {
  margin-right: 63rpx;
  font-size: 0;
  font-family: PingFang SC-Semibold, PingFang SC;
  color: #0D0D26;
}
.top .personal_info .info .nickname {
  width: 288rpx;
  height: 66rpx;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.top .personal_info .info .user_id {
  font-size: 28rpx;
}
.top .personal_info .edit {
  margin-top: 32rpx;
  width: 152rpx;
  height: 72rpx;
  border-radius: 38rpx;
  background: linear-gradient(#F56961, #E83C33);
  text-align: center;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  font-family: PingFang SC-Regular, PingFang SC;
}
.menu {
  border-radius: 50rpx;
  background-color: #FFFFFF;
  margin-top: -90rpx;
  padding: 48rpx 32rpx 0 32rpx;
}
.menu .mentu_title {
  font-size: 0;
  font-family: PingFang SC-Semibold, PingFang SC;
  margin-bottom: 48rpx;
}
.menu .mentu_title .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #0D0D26;
}
.menu .mentu_title .all_order {
  margin-top: 6rpx;
  font-size: 28rpx;
  color: #999999;
  margin-right: 14rpx;
}
.menu .middle {
  margin-bottom: 108rpx;
}
.menu .middle .order_relete {
  margin: 0 49rpx;
  text-align: center;
}
.menu .middle .order_relete image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 16rpx;
}
.menu .middle .order_relete .mid_tips_text {
  font-family: PingFang SC-Regular, PingFang SC;
  font-size: 28rpx;
  color: #333333;
}
.menu .middle .order_relete:nth-child(1) {
  margin-left: 30rpx;
}
.menu .middle .order_relete:nth-child(4) {
  margin-right: 32rpx;
}
.menu .bottom .bottom_item {
  padding: 32rpx 0;
}
.menu .bottom .bottom_item image {
  width: 28rpx;
  height: 28rpx;
}
.menu .bottom .bottom_item .left_icon {
  width: 8rpx;
  height: 24rpx;
  margin-top: 10rpx;
  background-color: #F2D86D;
  border-radius: 4rpx;
  margin-right: 20rpx;
}
.menu .bottom .bottom_item .text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 400;
  font-family: PingFang SC-Regular, PingFang SC;
}
.menu .bottom .bottom_item .right_icon {
  margin-top: 8rpx;
}
.mg-button {
  width: 690rpx;
  height: 100rpx;
  margin-top: 20rpx;
}
.mg-button button {
  background: linear-gradient(90deg, #F5DF9C 0%, #F2D86D 100%);
  border-radius: 64rpx;
  margin-top: 20rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}

