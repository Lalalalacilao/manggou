.status_bar {
  height: 88rpx;
}
.content > .top {
  background-color: #fff;
  border-bottom: 1rpx solid #E6E6E6;
}
.content > .top .title {
  height: 88rpx;
  box-sizing: border-box;
  padding: 24rpx 0 20rpx 32rpx;
  font-size: 0;
}
.content > .top .title .back image {
  width: 44rpx;
  height: 44rpx;
}
.content > .top .title .title_text {
  font-family: PingFang SC-Heavy, PingFang SC;
  color: #333;
  font-weight: 800;
  font-size: 32rpx;
  margin-left: 234rpx;
}
.feedback .function_choose {
  padding: 64rpx 0rpx 26rpx 32rpx;
}
.feedback .function_choose .function_item {
  margin-bottom: 32rpx;
  margin-right: 30rpx;
  width: 208rpx;
  height: 142rpx;
  background-color: #F6F6F6;
  border-radius: 12rpx;
  padding-top: 32rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.feedback .function_choose .function_item .icon {
  text-align: center;
  margin-bottom: 10rpx;
}
.feedback .function_choose .function_item .icon image {
  width: 44rpx;
  height: 44rpx;
}
.feedback .function_choose .function_item .text {
  font-family: PingFang HK-Regular, PingFang HK;
  font-size: 26rpx;
  color: #333333;
  text-align: center;
}
.feedback_content {
  margin-top: 32rpx;
  padding: 0 32rpx;
  font-size: 0;
  margin-bottom: 82rpx;
}
.feedback_content .title {
  margin-bottom: 24rpx;
  font-size: 32rpx;
  color: #333333;
  font-family: PingFang HK-Semibold, PingFang HK;
  font-weight: 600;
}
.feedback_content .feedbak_input {
  background-color: #F6F6F6;
  border-radius: 12rpx;
  padding: 26rpx 32rpx 28rpx 32rpx;
}
.feedback_content .feedbak_input textarea {
  font-size: 28rpx;
  font-family: PingFang HK-Regular, PingFang HK;
  height: 132rpx;
  box-sizing: border-box;
}
.feedback_content .feedbak_input .upload {
  padding-top: 26rpx;
}
.feedback_content .feedbak_input .upload .upload_item {
  margin-right: 26rpx;
  margin-top: 26rpx;
  width: 128rpx;
  height: 128rpx;
}
.feedback_content .feedbak_input .upload .upload_item image {
  width: 100%;
  height: 100%;
}
.feedback_content .feedbak_input .upload .upload_btn {
  border: 2rpx dashed #BDBFC1;
  text-align: center;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.feedback_content .feedbak_input .upload .upload_btn image {
  width: 35rpx;
  height: 35rpx;
}
.contact {
  padding: 0 32rpx;
  margin-top: 60rpx;
  margin-bottom: 82rpx;
  font-size: 0;
}
.contact .top {
  margin-bottom: 20rpx;
  font-family: PingFang HK-Semibold, PingFang HK;
}
.contact .top .title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-right: 18rpx;
}
.contact .top .tips {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}
.contact .contact_input {
  width: 686rpx;
  height: 108rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 32rpx 34rpx;
  background-color: #F6F6F6;
  font-size: 28rpx;
}
.submit {
  margin: 0 auto;
  border-radius: 50rpx;
  background-color: #F2D86D;
  width: 686rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #0D0D26;
  box-shadow: 0rpx 16rpx 55rpx -20rpx #f2d86d;
}
.tips {
  color: #D0CDCD;
}
.functionBacc {
  background-color: #F2D86D !important;
  box-shadow: 0rpx 16rpx 55rpx -20rpx #f2d86d;
