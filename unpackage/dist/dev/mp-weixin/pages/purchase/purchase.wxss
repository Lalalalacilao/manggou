.float_left {
  float: left;
}
.float_right {
  float: right;
}
.clear {
  clear: both;
  content: "";
  overflow: hidden;
}
.fill {
  height: 176rpx;
}
.content {
  background-color: #f9f9f9;
  padding: 20rpx 32rpx 0 32rpx;
  height: 95vh;
}
.top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
}
.top .status_bar {
  width: 100%;
  height: 88rpx;
}
.top .title {
  height: 88rpx;
  box-sizing: border-box;
  padding: 24rpx 0 20rpx 32rpx;
  font-size: 0;
}
.top .title .back image {
  width: 44rpx;
  height: 44rpx;
}
.top .title .title_text {
  font-family: PingFang SC-Heavy, PingFang SC;
  color: #333;
  font-weight: 800;
  font-size: 32rpx;
  margin-left: 234rpx;
}
.address {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx 10rpx 20rpx 10rpx;
  font-size: 0;
}
.address .title {
  margin-bottom: 20rpx;
}
.address .title .title_text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.address .title .title_icon image {
  width: 44rpx;
  height: 44rpx;
}
.address .address_info .detail {
  font-size: 28rpx;
  color: #191919;
  margin-bottom: 5rpx;
}
.address .address_info .personal_info {
  font-size: 28rpx;
}
.address .address_info .personal_info .name {
  margin-right: 20rpx;
}
.order {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx 10rpx 20rpx 10rpx;
  font-size: 0;
}
.order .preview {
  margin-right: 30rpx;
}
.order .preview image {
  width: 200rpx;
  height: 200rpx;
}
.order .order_info {
  width: 440rpx;
}
.order .order_info .pro_title {
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.order .order_info .price {
  margin-top: 30rpx;
  font-size: 28rpx;
}
.order .order_info .pro_info {
  margin-top: 30rpx;
  font-size: 28rpx;
}
.order .order_info .pro_info .num_adjust {
  display: flex;
}
.order .order_info .pro_info .num_adjust button {
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  padding: 0;
  padding-top: -3rpx;
}
.order .order_info .pro_info .num_adjust button:last-child {
  background-color: #F2D86D;
}
.order .order_info .pro_info .num_adjust input {
  text-align: center;
  width: 60rpx;
  height: 40rpx;
}
.notes {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx 10rpx 20rpx 10rpx;
  font-size: 0;
}
.notes .title {
  font-size: 32rpx;
  font-weight: bold;
}
.notes textarea {
  width: 100%;
  margin-top: 10rpx;
  height: 150rpx;
  font-size: 28rpx;
  line-height: 34rpx;
}
.price {
  border-radius: 20rpx;
  padding: 20rpx 10rpx 20rpx 10rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
}
.price text {
  color: red;
  font-weight: bold;
}
.bottom_funciton {
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  padding: 10rpx 32rpx 20rpx 32rpx;
  line-height: 120rpx;
}
.bottom_funciton .money {
  font-size: 28rpx;
}
.bottom_funciton .btn {
  text-align: center;
  margin-top: 10rpx;
  font-weight: bold;
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #F2D86D;
  color: #f0f0f0;
  border: 2rpx solid #F2D86D;
  border-radius: 50rpx;
}

