.float_left {
  float: left;
}
.float_right {
  float: right;
}
.clear {
  content: "";
  overflow: hidden;
  clear: both;
}
.flex {
  display: flex;
}
.status_bar {
  width: 100%;
  height: 88rpx;
}
.top .title {
  padding: 22rpx 32rpx;
}
.top .title .close {
  margin-right: 236rpx;
}
.top .title .close image {
  width: 44rpx;
  height: 44rpx;
}
.top .title .title_text {
  font-family: PingFang HK-Semibold, PingFang HK;
  color: #333333;
  font-size: 32rpx;
  font-weight: 600;
}
form {
  display: block;
  padding-left: 32rpx;
  padding-right: 24rpx;
}
form .title_place {
  color: #D0CDCD;
}
form .title {
  border-bottom: 2rpx solid #F4F4F4;
}
form .title input {
  padding-top: 42rpx;
  padding-bottom: 40rpx;
  font-size: 40rpx;
}
form .describe textarea {
  width: 100%;
  height: 242rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}
.upload_image {
  flex-wrap: wrap;
  padding-left: 32rpx;
  margin-bottom: 36rpx;
  font-size: 0;
}
.upload_image view {
  width: 216rpx;
  height: 216rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}
.upload_image view image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.upload_image .upload_btn {
  text-align: center;
  font-family: PingFang HK-Regular, PingFang HK;
  font-size: 24rpx;
  color: #BDBFC1;
  padding-top: 74rpx;
  box-sizing: border-box;
  background-color: #F6F6F6;
}
.upload_image .upload_btn image {
  width: 18rpx;
  height: 18rpx;
}
.upload_image .upload_btn ._br {
  height: 0;
  margin: 0;
}
.position {
  width: 208rpx;
  height: 56rpx;
  box-sizing: border-box;
  padding: 10rpx 0;
  margin-left: 32rpx;
  font-size: 0;
  border-radius: 28rpx;
}
.position .icon {
  margin-right: 8rpx;
}
.position .icon image {
  width: 36rpx;
  height: 36rpx;
}
.position .text {
  line-height: 36rpx;
  font-size: 26rpx;
  color: #999999;
  margin-right: 14rpx;
}
.position .arrow {
  font-size: 25rpx;
  line-height: 36rpx;
  color: #999999;
}
.choose {
  margin-top: 30rpx;
  margin-bottom: 58rpx;
  font-size: 0;
}
.choose .choose_item {
  padding: 38rpx 36rpx 38rpx 32rpx;
}
.choose .choose_item .icon {
  margin-right: 16rpx;
}
.choose .choose_item .icon image {
  width: 42rpx;
  height: 42rpx;
}
.choose .choose_item .text {
  font-size: 30rpx;
  color: #333333;
  font-family: PingFang HK-Semibold, PingFang HK;
  font-weight: 600;
}
.choose .choose_item .arrow {
  margin-top: 8rpx;
}
.choose .choose_item .arrow image {
  width: 28rpx;
  height: 28rpx;
}
.choose .choose_item .text_right {
  margin-right: 16rpx;
}
.choose .price {
  border-bottom: 2rpx solid #F8F8F8;
}
.choose .price .price_num {
  font-size: 32rpx;
  color: #EA402B;
  font-family: PingFang HK-Semibold, PingFang HK;
  font-weight: 600;
}
.choose .price .price_num input {
  width: 100rpx;
}
.choose .postage {
  font-family: PingFang HK-Regular, PingFang HK;
  font-size: 30rpx;
  color: #999999;
}
.choose .postage input {
  width: 100rpx;
}
.btn {
  justify-content: center;
  font-size: 0;
}
.btn view {
  width: 324rpx;
  height: 100rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 100rpx;
  color: #333333;
  font-size: 32rpx;
  font-family: PingFang HK-Regular, PingFang HK;
  font-weight: 400;
}
.btn .draft {
  background-color: #fff;
  border: 2rpx solid #E0E0E0;
  margin-right: 24rpx;
}
.btn .release {
  width: 686rpx;
  background-color: #f2d86d;
  box-shadow: 0rpx 16rpx 55rpx -20rpx #f2d86d;
}

