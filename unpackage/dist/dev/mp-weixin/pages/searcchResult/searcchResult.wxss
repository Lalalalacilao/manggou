.clear {
  clear: both;
  content: "";
  overflow: hidden;
}
.float_left {
  float: left;
}
.float_right {
  float: right;
}
.content {
  background-color: #F9F9F9;
}
.status_bar {
  width: 100%;
  height: 76rpx;
}
.top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  margin-bottom: 16rpx;
}
.top .search {
  padding: 26rpx 0 10rpx 14rpx;
  font-size: 0;
}
.top .search .back {
  padding: 18rpx;
}
.top .search .back image {
  width: 16rpx;
  height: 28rpx;
}
.top .search .search_box {
  position: relative;
}
.top .search .search_box .btn {
  position: absolute;
  top: 18rpx;
  left: 26rpx;
}
.top .search .search_box .btn image {
  width: 29rpx;
  height: 30rpx;
}
.top .search .search_box input {
  background-color: #F6F6F6;
  box-sizing: border-box;
  height: 64rpx;
  width: 434rpx;
  font-size: 26rpx;
  padding-left: 70rpx;
  border-radius: 40rpx;
}
.fill {
  height: 176rpx;
}
.product_show {
  padding-left: 32rpx;
  padding-right: 10rpx;
  background-color: #fff;
}
.product_show .function_area {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  font-size: 0;
}
.product_show .function_area .fun_item {
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.product_show .function_area .fun_item image {
  margin-left: 8rpx;
  width: 13rpx;
  height: 8rpx;
}
.product_show .function_area .comprehensive_page {
  position: absolute;
  top: 265rpx;
  left: 56rpx;
  z-index: 999;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 10rpx 10rpx 14rpx 10rpx;
  box-shadow: 0rpx 6rpx 20rpx 2rpx rgba(51, 51, 51, 0.4);
}
.product_show .function_area .comprehensive_page view {
  width: 236rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
}
.product_show .function_area .price_text {
  margin-right: 6rpx;
}
.product_show .function_area .order view {
  font-size: 16rpx;
}
.product_show .function_area .order image {
  width: 12rpx;
  height: 7rpx;
}
.product_show .function_area .order .ascending_order {
  margin-top: 4rpx;
  margin-bottom: -10rpx;
}
.product_show .function_area .order .descending_order {
  margin-top: -10rpx;
}
.product_show .product_preview {
  padding-top: 28rpx;
  position: relative;
  z-index: 0;
}
.product_show .product_preview .pre_item {
  margin-bottom: 48rpx;
  margin-right: 22rpx;
}
.product_show .product_preview .pre_item .image {
  position: relative;
  z-index: 0;
  margin-bottom: 20rpx;
}
.product_show .product_preview .pre_item .image image {
  border-radius: 16rpx;
  width: 332rpx;
}
.product_show .product_preview .pre_item .text {
  font-family: PingFang SC-Regular, PingFang SC;
  width: 312rpx;
  margin-bottom: 16rpx;
}
.product_show .product_preview .pre_item .text .intr {
  font-size: 24rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 4rpx;
}
.product_show .product_preview .pre_item .text .price {
  font-size: 20rpx;
  margin-bottom: 20rpx;
}
.product_show .product_preview .pre_item .text .price text {
  font-size: 32rpx;
  font-weight: 800;
  color: #0D0D26;
}
.product_show .product_preview .pre_item .user {
  font-size: 0;
}
.product_show .product_preview .pre_item .user .head image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}
.product_show .product_preview .pre_item .user .nickname {
  line-height: 40rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  color: #999999;
  font-size: 24rpx;
}
.bold > text {
  font-weight: 800;
}
.rotate {
  -webkit-transform: rotateX(180deg) !important;
          transform: rotateX(180deg) !important;
  transition: all 0.5s;
}
.loading {
  height: 156rpx;
  text-align: center;
  line-height: 156rpx;
  font-size: 26rpx;
  color: #333333;
}

